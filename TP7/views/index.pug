extends layout

block content
  div.tracking-wide.text-center.py-8.space-y-2
    h1.font-bold.text-7xl= title
    h2.font-light.text-3xl= subtitle
  div.flex.flex-col.gap-5.px-16.pb-8
    for classe in classes
      a(href=classe['codigo']).bg-slate-600.rounded-xl.p-4.shadow-sm.shadow-slate-900
        p.text-xl
          span.font-light.text-slate-200 Função: 
          | #{classe['titulo']}
          | [#{classe['codigo']}]
